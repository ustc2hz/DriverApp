<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:id="@+id/driver_order_detail_info"
    android:orientation="vertical" >
    
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/order_custom_dialog_title"
        android:textSize="35dp"
        android:gravity="center"/>
    
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:id="@+id/order_custom_dialog_content"/>
    
    <Button android:id="@+id/order_custom_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/driver_cancel_parking_order"
        android:layout_gravity="center"/>

</LinearLayout>
