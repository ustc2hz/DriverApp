<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/text_book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66ffcc"
        android:gravity="center_horizontal|top"
        android:text="车位预定"
        android:textColor="#ff0033"
        android:textSize="30sp" />

    <View android:id="@+id/book_view1"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/text_book_title"
        android:background="#000000" />
    
    <TextView android:id="@+id/text_license_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择车牌："
        android:layout_below="@id/book_view1"/>
    
    <ListView android:id="@+id/listview_license_chose"
        android:layout_below="@id/text_license_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#0000ff"
        android:dividerHeight="4dp"></ListView>
    
    <View android:id="@+id/book_view2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/listview_license_chose"
        android:background="#000000" />
    
    <LinearLayout android:id="@+id/book_linear1"
        android:layout_below="@id/book_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView android:id="@+id/text_book_time_chose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="选择预定时间："/>
        
        <Spinner android:id="@+id/spinner_time_chose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:prompt="@string/spinner_chose_tip"/>
      
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"      
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_submit_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"           
            android:text="提交预定" />

        <Button
            android:id="@+id/button_cancel_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消预定" />
    </LinearLayout>

</RelativeLayout>
